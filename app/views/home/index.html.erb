<%= form_tag('/', method: :get, class: 'form') do %>
  <%= label_tag :query, "All github repositories containing" %>"
  <%= text_field_tag :query, params[:query], placeholder: "hello world", id: 'input' %>"
<% end %>


<div class="card-list">
  <% if(@result.present?) %>
    <% @result.each do |repo| %>
      <%= link_to repo['html_url'], target: "_blank", class: 'card' do %>
          <%= content_tag(:span, repo['full_name'], class: "repo-name") %>
          <%= content_tag(:span, repo['description'], class: "repo-description") %>
      <% end %>
    <% end %>
  <% end %>
</div>